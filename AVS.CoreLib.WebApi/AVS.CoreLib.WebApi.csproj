  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" Version="5.6.3" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy /Y &quot;$(TargetDir)/$(TargetName).dll&quot; &quot;$(SolutionDir)/../_references/CoreLib/$(TargetName).dll&quot;&#xD;&#xA;copy /Y &quot;$(TargetDir)/$(TargetName).pdb&quot; &quot;$(SolutionDir)/../_references/CoreLib/$(TargetName).pdb&quot;&#xD;&#xA;copy /Y &quot;$(TargetDir)/$(TargetName).xml&quot; &quot;$(SolutionDir)/../_references/CoreLib/$(TargetName).xml&quot;" />
  </Target>

</Project>
